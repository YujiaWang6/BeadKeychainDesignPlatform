@model IEnumerable<BeadKeychainDesignPlatform.Models.BeadColourDto>
@{
    ViewBag.Title = "New";
}

<h2>Create A Bead</h2>
<form action="/Bead/Create" method="POST">
    <div>
        <label>Bead Name:</label>
        <input name="BeadName" type="text" />
    </div>
    <div>
        <label>Bead Description:</label>
        <input name="BeadDescription" type="text" />
    </div>
    <div>
        <label>Bead Colour Id:</label>
        <select name="ColourId">
            <option disabled selected>--Choose the colour--</option>
            @foreach (var colour in Model)
            {
                <option value="@colour.ColourId">@colour.ColourProperty @colour.ColourName</option>

            }
        </select>
    </div>
    <div>
        <label>Bead Picture:</label>
        <input name="BeadPicture" type="text" />
    </div>
    <div>
        <input type="submit" value="Add A Bead" />
    </div>

</form>
